<div class="p-4" style="border-radius:20px;">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">User Data Email List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Upsert" class="btn btn-primary text-white"><i class="fas fa-plus"></i> &nbsp; Create New User Email Entry</a>
        </div>
    </div>
    <br />
    <br />
    <div style="background-color:#cde8e2" class="p-3 rounded">
        <table id="tblData" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr class="table-danger">
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@if (TempData["okmsg"] != null)
{
    <script type="text/javascript">
            window.onload = function () {
                swal("Success!", '@TempData["okmsg"]', "success");
            };
    </script>
}

@if (TempData["errmsg"] != null)
{
    <script type="text/javascript">
            window.onload = function () {
                swal("Error!", '@TempData["errmsg"]', "error");
            };
    </script>
}


@section Scripts {
    <script src="~/js/usrData.js"></script>
}